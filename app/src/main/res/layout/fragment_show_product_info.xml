<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView_show_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_show_product_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/textView_show_product_name"
        app:layout_constraintStart_toStartOf="@+id/textView_show_product_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_show_product_name" />

    <TextView
        android:id="@+id/textView_show_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/textView_show_product_type"
        app:layout_constraintStart_toStartOf="@+id/textView_show_product_type"
        app:layout_constraintTop_toBottomOf="@+id/textView_show_product_type" />
</androidx.constraintlayout.widget.ConstraintLayout>