<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.myandroidproject.SelectedWeatherActivity">


    <TextView
        android:id="@+id/tv_city_name"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/moscow"
        android:textSize="24sp"
        android:textColor="@color/textIcons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_city_temp"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="92dp"
        android:text="@string/_11"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_temp_feel"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="64dp"
        android:text="@string/feels_like"
        android:textColor="@color/textIcons"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_city_temp" />

    <TextView
        android:id="@+id/tv_temp_feel_num"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:text="@string/_18"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/textIcons"
        app:layout_constraintBottom_toBottomOf="@+id/tv_temp_feel"
        app:layout_constraintStart_toEndOf="@+id/tv_temp_feel"
        app:layout_constraintTop_toTopOf="@+id/tv_temp_feel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_wind"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="28dp"
        android:text="@string/wind"
        android:textColor="@color/textIcons"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_weather_type"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_weather_type" />

    <TextView
        android:id="@+id/tv_wind_type"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:text="@string/wind_type"
        android:textColor="@color/textIcons"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_wind"
        app:layout_constraintStart_toEndOf="@+id/tv_wind"
        app:layout_constraintTop_toTopOf="@+id/tv_wind"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_weather_type"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/weather_type"
        android:textColor="@color/textIcons"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_weather_pic"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="@+id/iv_weather_pic"
        app:layout_constraintTop_toBottomOf="@+id/iv_weather_pic" />

    <TextView
        android:id="@+id/tv_pressure"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:text="@string/pressure"
        android:textColor="@color/textIcons"
        app:layout_constraintEnd_toEndOf="@+id/tv_wind"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_wind"
        app:layout_constraintTop_toBottomOf="@+id/tv_wind" />

    <TextView
        android:id="@+id/tv_pressure_num"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/_1015"
        android:textColor="@color/textIcons"
        app:layout_constraintBottom_toBottomOf="@+id/tv_pressure"
        app:layout_constraintStart_toEndOf="@+id/tv_pressure"
        app:layout_constraintTop_toTopOf="@+id/tv_pressure"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_humidity"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/humidity"
        android:textColor="@color/textIcons"
        app:layout_constraintEnd_toStartOf="@+id/tv_pressure_num"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_pressure"
        app:layout_constraintTop_toBottomOf="@+id/tv_pressure" />

    <TextView
        android:id="@+id/tv_humidity_num"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="@string/_54"
        android:textColor="@color/textIcons"
        app:layout_constraintBottom_toBottomOf="@+id/tv_humidity"
        app:layout_constraintStart_toEndOf="@+id/tv_humidity"
        app:layout_constraintTop_toTopOf="@+id/tv_humidity"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_celcius"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:text="@string/celcius"
        android:textSize="64sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_city_temp"
        app:layout_constraintStart_toEndOf="@+id/tv_city_temp"
        app:layout_constraintTop_toTopOf="@+id/tv_city_temp"
        app:layout_constraintVertical_bias="0.49" />

    <ImageView
        android:id="@+id/iv_weather_pic"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_city_temp"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/tv_day_of_week"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/dayOfWeek"
        android:textColor="@color/textIcons"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_city_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tv_city_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_city_name" />


</androidx.constraintlayout.widget.ConstraintLayout>